# 环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改

# ===========================================
# 基础配置
# ===========================================
# JWT密钥 (必需) - 生产环境必须使用强密钥
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# 服务器端口
PORT=8080

# 数据库路径
DB_PATH=./indexer.db

# ===========================================
# 白名单配置
# ===========================================
# 管理员地址 (用逗号分隔)
# 开发环境示例
ADMIN_ADDRESSES=0x27f9B6A7C1Fd66AC4D0e76a2d43B35e8590165f6

# 生产环境示例 (多管理员)
# ADMIN_ADDRESSES=0x27f9B6A7C1Fd66AC4D0e76a2d43B35e8590165f6,0x1234567890123456789012345678901234567890,0x9876543210987654321098765432109876543210

# 商家地址 (用逗号分隔)
# 开发环境示例 (包含测试数据中的所有商家)
MERCHANT_ADDRESSES=0x77Ed7f6455FE291728A48785090292e3D10F53Bb,0x27f9B6A7C1Fd66AC4D0e76a2d43B35e8590165f6,0x9876543210987654321098765432109876543210,0xabcdef1234567890abcdef1234567890abcdef12,0xfedcba0987654321fedcba0987654321fedcba09

# 生产环境示例 (多商家)
# MERCHANT_ADDRESSES=0x77Ed7f6455FE291728A48785090292e3D10F53Bb,0x296a0eb001001181a33306bee52b69514541b443cf8fbdeb3666c9773502d408,0x3333333333333333333333333333333333333333

# ===========================================
# 区块链配置
# ===========================================
# RPC节点配置
ETH_WSS_URL=wss://your-wss-endpoint
ETH_HTTPS_URL=https://your-https-endpoint

# 合约配置
CONTRACT_ADDRESS=0xe2f36c4f1BF9E7B7261c676E35b8d17C0845382A
CHAIN_ID=84532

# ===========================================
# 生产环境配置 (可选)
# ===========================================
# 日志级别 (debug, info, warn, error)
# LOG_LEVEL=info

# 监控配置
# METRICS_ENABLED=true
# METRICS_PORT=9090

# 安全增强
# AUDIT_LOG_ENABLED=true
# AUDIT_LOG_PATH=/var/log/cross-chain-indexer/audit.log
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_REQUESTS_PER_MINUTE=100

# 通知配置
# NOTIFICATION_WEBHOOK=https://your-slack-webhook-url